{
	"compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "pretty": true,
    "removeComments": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
		"strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
    }
	},
  "exclude": [
    "node_modules",
    "dist",
  ],
}
